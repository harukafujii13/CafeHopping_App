//it's using PostgreSQL as the database provider

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cafe {
  id        String  @id @default(uuid())
  name      String
  location  String
  // Other cafe properties
  bookmarks Bookmark[]
}

model Bookmark {
  id     String @id @default(uuid())
  userId String
  cafeId String
  cafe   Cafe   @relation(fields: [cafeId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@unique([userId, cafeId])
}



model User {
  id        String @id @default(uuid())
  name      String
  email     String @unique
  password  String
  bookmarks Bookmark[] 
}

