//it's using PostgreSQL as the database provider

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cafe {
  id        String     @id @default(uuid())
  name      String
  rating    Float
  place_id  String
  bookmarks Bookmark[]
  likes     Like[]
  photos    String
  lat       Float
  lng       Float
  opening_hours String[]
}



model Bookmark {
  id     String @id @default(uuid())
  userId String
  cafeId String
  cafe   Cafe   @relation(fields: [cafeId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@unique([userId, cafeId]) 
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  bookmarks Bookmark[]
  likes     Like[] 
}

model Like {
  id     String @id @default(uuid())
  userId String
  cafeId String
  cafe   Cafe   @relation(fields: [cafeId], references: [id])
  user   User   @relation(fields: [userId], references: [id])


}

//Model: The model block defines a data model for the User entity in the database. 
//The @@unique([userId, cafeId]) makes sure that a combination of userId and 
//cafeId is unique in the Bookmark table.
